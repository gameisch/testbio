mixin blockexp()
    .section#exp
        +heading('Расскажите о своем опыте', 'icon2.png')
        .section__inner
            .form
                .form__field.form__field--3col.checkbx
                    //- - for (var i = 0; i < 9; i++)
                    .form__item
                        input(value='bem' id='bem' type='checkbox')
                        label(for='bem') БЭМ/OOCSS
                    .form__item
                        input(value='les' id='les' type='checkbox')
                        label(for='les') Stylus/Less/SASS
                    .form__item
                        input(value='svg' id='svg' type='checkbox')
                        label(for='svg') Работаю с SVG
                    .form__item
                        input(value='sem' id='sem' type='checkbox')
                        label(for='sem') Верстаю семантично
                    .form__item
                        input(value='es' id='es' type='checkbox')
                        label(for='es') ES2015/ES2016
                    .form__item
                        input(value='gulp' id='gulp' type='checkbox')
                        label(for='gulp') GULP/GRUNT
                    .form__item
                        input(value='webp' id='webp' type='checkbox')
                        label(for='webp') Webpack
                    .form__item
                        input(value='jq' id='jq' type='checkbox')
                        label(for='jq') jQuery
                    .form__item
                        input(value='git' id='git' type='checkbox')
                        label(for='git') Использую Git
                    